<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_layout_type"
            layout="@layout/layout_type"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:elevation="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/layout_layout_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_upload_photo_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewAppearanceHeading"
                    android:text="@string/upload_photo"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="38dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_upload_photo_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_photo_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_highschool_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/High_School"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_photo_document" />

                <TextView
                    android:id="@+id/tv_upload_highschool_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_highschool_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_Intermediate_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/Intermediate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_highschool_document" />

                <TextView
                    android:id="@+id/tv_upload_Intermediate_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_Intermediate_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_UG_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/UG_marksheet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_Intermediate_document" />

                <TextView
                    android:id="@+id/tv_upload_UG_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_UG_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_PG_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/PG_marksheet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_UG_document" />

                <TextView
                    android:id="@+id/tv_upload_PG_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_PG_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_paySlip_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/company_paySlip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_PG_document" />

                <TextView
                    android:id="@+id/tv_upload_paySlip_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_paySlip_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <TextView
                    android:id="@+id/tv_upload_offerLetter_heading_1"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/offer_letter_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_paySlip_document" />

                <TextView
                    android:id="@+id/tv_upload_offerLetter_document_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_offerLetter_heading_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_offerLetter_heading_2"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/offer_letter_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_offerLetter_document_1" />

                <TextView
                    android:id="@+id/tv_upload_offerLetter_document_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_offerLetter_heading_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_upload_offerLetter_heading_3"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/offer_letter_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_offerLetter_document_2" />

                <TextView
                    android:id="@+id/tv_upload_offerLetter_document_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_file"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    style="@style/EditTextAppearance"
                    android:drawableEnd="@drawable/ic_upload_photo"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_offerLetter_heading_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/button_blue_bg"
                    android:textSize="14sp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:layout_marginTop="23dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="23dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_offerLetter_document_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bt_cancel"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/button_white_bg_red_corner"

                    android:textSize="14sp"
                    android:text="Cancel"
                    android:textColor="@color/chinese_black"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toEndOf="@id/bt_submit"
                    app:layout_constraintTop_toTopOf="@id/bt_submit"
                    app:layout_constraintBottom_toBottomOf="@id/bt_submit"
                    app:layout_constraintEnd_toEndOf="parent"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>