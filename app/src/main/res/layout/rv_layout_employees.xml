<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"

    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/ll_recyclerViewlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_employeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewAppearanceRecyclerView"
                android:layout_marginVertical="14dp"
                android:layout_marginStart="23dp"
                android:text="@string/employee_name_plain"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_assigned_project_name"
                android:layout_width="0dp"
                style="@style/TextViewAppearanceRecyclerView"
                android:layout_height="wrap_content"
                android:text="@string/project_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="visible"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/tv_employeeName"
                app:layout_constraintBottom_toBottomOf="@id/tv_employeeName"
                app:layout_constraintStart_toEndOf="@id/tv_employeeName"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_assign_bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_projectName_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextViewAppearanceRecyclerViewHeading"
                android:layout_marginStart="22dp"
                android:layout_marginTop="13dp"
                android:text="@string/project_name_colon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_projectName_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextViewAppearanceRecyclerViewDetail"
                android:layout_marginStart="100dp"
                android:text="DMS"
                android:layout_marginEnd="40dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="@id/tv_projectName_heading"
                app:layout_constraintStart_toEndOf="@id/tv_projectName_heading"
                app:layout_constraintBottom_toBottomOf="@id/tv_projectName_heading"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_clientName_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:text="@string/client_name_colon"
                style="@style/TextViewAppearanceRecyclerViewHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_projectName_heading"
                />
            
            <TextView
                android:id="@+id/tv_clientName_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextViewAppearanceRecyclerViewDetail"
                android:layout_marginEnd="40dp"
                android:ellipsize="end"
                android:text="Infione"
                app:layout_constraintStart_toStartOf="@id/tv_projectName_detail"
                app:layout_constraintTop_toTopOf="@id/tv_clientName_heading"
                app:layout_constraintBottom_toBottomOf="@id/tv_clientName_heading"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_startDate_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:text="@string/start_date_colon"
                style="@style/TextViewAppearanceRecyclerViewHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_clientName_heading"
                />

            <TextView
                android:id="@+id/tv_startDate_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:ellipsize="end"
                android:text="07-07-2023"
                app:layout_constraintStart_toStartOf="@id/tv_clientName_detail"
                app:layout_constraintTop_toTopOf="@id/tv_startDate_heading"
                app:layout_constraintBottom_toBottomOf="@id/tv_startDate_heading"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_status_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                style="@style/TextViewAppearanceRecyclerViewHeading"
                android:text="@string/status_colon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_startDate_heading"
                />
            <TextView
                android:id="@+id/tv_status_details"
                style="@style/TextViewAppearanceRecyclerViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:ellipsize="end"
                android:text="OnGoing"
                app:layout_constraintStart_toStartOf="@id/tv_startDate_details"
                app:layout_constraintBottom_toBottomOf="tv_status_heading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_status_heading" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>