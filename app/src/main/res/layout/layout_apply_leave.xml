<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:layout_margin="16dp"
            android:elevation="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_apply_leave_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_leave_headline"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_usedLeave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintTop_toBottomOf="@id/tv_apply_leave_headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_used_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/used_leave"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="25dp"
                        android:textColor="#67748E"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_used_unpaid_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/used_unpaid_leave_colon"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="25dp"
                        android:textColor="#252F40"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_used_leave"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_used_paid_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/used_paid_leave_colon"
                        android:textStyle="bold"
                        android:textColor="#252F40"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="6dp"
                        android:paddingBottom="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_used_unpaid_leave"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/red_calender"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_available_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_usedLeave"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_available_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_leave"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="25dp"
                        android:textColor="#67748E"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_available_unpaid_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_unpaid_leave_colon"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="25dp"
                        android:textColor="#252F40"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_available_leave"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_available_paid_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_paid_leave_colon"
                        android:textStyle="bold"
                        android:textColor="#252F40"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="6dp"
                        android:paddingBottom="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_available_unpaid_leave"/>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_greenCalender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >

                        <ImageView
                            android:id="@+id/iv_greenCalender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/green_calender"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_subject_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_outline_round_corner"
                    app:layout_constraintTop_toBottomOf="@id/layout_available_leave"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/enter_subject_editText"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="25dp"
                        android:hint="@string/enter_leave_subject"
                        android:textColorHint="#ADADAD"
                        android:paddingBottom="50dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_from_date_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@string/from_date"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_subject_editText" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_from_date"
                    style="@style/EditTextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/edit_text_outline_round_corner"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:hint="dd-mm-yyyy"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintEnd_toStartOf="@id/et_to_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_from_date_heading"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/tv_to_date_heading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/to_date"
                    app:layout_constraintStart_toStartOf="@id/et_to_date"
                    app:layout_constraintTop_toBottomOf="@id/layout_subject_editText"

                    />

                <EditText
                    android:id="@+id/et_to_date"
                    style="@style/EditTextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/edit_text_outline_round_corner"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:hint="dd-mm-yyyy"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/et_from_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/et_from_date"
                    app:layout_constraintTop_toTopOf="@id/et_from_date"
                    app:layout_goneMarginStart="6dp" />

                <RadioGroup
                    android:id="@+id/rg_unpaid_paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_from_date">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_un_paid"
                        style="@style/TextViewRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black2"
                        android:text="@string/unpaid" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_paid"
                        style="@style/TextViewRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:buttonTint="@color/black2"
                        android:text="@string/paid" />


                </RadioGroup>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/button_blue_bg"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:layout_marginTop="23dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="23dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rg_unpaid_paid"
                    app:layout_constraintEnd_toStartOf="@id/bt_cancel"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/button_white_bg_red_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Cancel"
                    android:textColor="@color/chinese_black"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toEndOf="@id/bt_submit"
                    app:layout_constraintTop_toTopOf="@id/bt_submit"
                    app:layout_constraintBottom_toBottomOf="@id/bt_submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/bt_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="18dp"
                    android:background="@color/anti_flash_white"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <include
                        android:id="@+id/layout_leave_request"
                        layout="@layout/layout_leave_request"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>