<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <include
            android:id="@+id/layout_layoutType"
            layout="@layout/layout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_layoutType">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_addProjectGroup"
                    style="@style/TextViewAdminAccessGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/add_project"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_projectNameHeading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/project_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_addProjectGroup" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_projectName"
                    style="@style/EditTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_white_radius_10"
                    android:hint="@string/enter_project_name"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_projectNameHeading" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_projectDetailsHeading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/project_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_projectName" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_projectDetails"
                    style="@style/EditTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_white_radius_10"
                    android:hint="@string/enter_project_details"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_projectDetailsHeading" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_projectStatusHeading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/project_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_projectDetails" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_projectStatus"
                    style="@style/EditTextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/custom_spinner"
                    android:dropDownHeight="200dp"
                    android:entries="@array/gender_array"
                    android:outlineProvider="bounds"
                    android:overlapAnchor="false"
                    android:paddingVertical="12dp"
                    android:paddingStart="6dp"
                    android:prompt="@string/gender_prompt"
                    android:spinnerMode="dropdown"

                    app:layout_constraintEnd_toStartOf="@id/sp_selectClient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_projectStatusHeading"
                    tools:ignore="RtlSymmetry" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_selectClientHeading"
                    style="@style/TextViewAppearanceHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/select_client"
                    app:layout_constraintStart_toStartOf="@id/sp_selectClient"
                    app:layout_constraintTop_toBottomOf="@id/et_projectDetails"

                    />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_selectClient"
                    style="@style/EditTextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/custom_spinner"
                    android:dropDownHeight="200dp"
                    android:entries="@array/gender_array"
                    android:outlineProvider="bounds"
                    android:overlapAnchor="false"
                    android:paddingVertical="12dp"
                    android:paddingStart="6dp"
                    android:prompt="@string/gender_prompt"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@id/sp_projectStatus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sp_projectStatus"
                    app:layout_constraintTop_toTopOf="@id/sp_projectStatus"
                    tools:ignore="RtlSymmetry" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_addClient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/button_blue_bg"
                    android:fontFamily="@font/open_sans_bold"
                    android:letterSpacing="-0.039"
                    android:text="@string/assign"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/bt_reset"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sp_projectStatus" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/button_white_bg_red_corner"
                    android:fontFamily="@font/open_sans_bold"
                    android:letterSpacing="-0.039"
                    android:text="@string/reset"
                    android:textAllCaps="false"
                    android:textColor="@color/black2"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/bt_addClient"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bt_addClient"
                    app:layout_constraintTop_toTopOf="@id/bt_addClient" />


                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="10sp"
                    android:background="@color/anti_flash_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bt_addClient" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_adminGroup"
                    style="@style/TextViewAdminAccessGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/project_details_plain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    app:layoutManager="LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_adminGroup"
                    tools:itemCount="6"

                    tools:listitem="@layout/rv_layout_project_details" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>